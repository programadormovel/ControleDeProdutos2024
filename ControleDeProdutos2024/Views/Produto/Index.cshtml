@using System.Globalization
@model List<ProdutoModel>

@{
    ViewData["Title"] = "Listagem de Produtos";
}

<div>
    <a class="btn btn-success" role="button" asp-controller="Produto" asp-action="Criar">Adicionar novo produto</a>
</div>

<h3 class="display-4">Listagem de Produtos</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Foto</th>
            <th scope="col">Id</th>
            <th scope="col">Código de Barras</th>
            <th scope="col">Descrição</th>
            <th scope="col">Data de Validade</th>
            <th scope="col">Data de Registro</th>
            <th scope="col">Quantidade</th>
            <th scope="col">Valor Unitário</th>
            <th scope="col">Situação</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @if(Model != null && Model.Any())
        {
            foreach(ProdutoModel produto in Model)
            {
                <tr>
                    <td>foto</td>
                    <td>@produto.Id</td>
                    <td>@produto.CodigoDeBarras</td>
                    <td>@produto.Descricao</td>
                    <td>@produto.DataDeValidade</td>
                    <td>@produto.DataDeRegistro</td>
                    <td>@produto.Quantidade</td>
                    <td>@produto.Valor</td>
                    <td>
                        @if (produto.Ativo)
                        {
                            <p>Ativo</p>
                        }
                        else
                        {
                             <p>Inativo</p>
                        }
                       
                    </td>
                </tr>
            }
        }
        
        
    </tbody>
</table>